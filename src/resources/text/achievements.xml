    <achievement name="On A Roll" level="GOLD" difficulty="NONE">
        <description>Use 5 item tiles over the course of 5 moves.</description>
        <rule type="RATE">
            <numerator type="COLLISION" sub-type="ALL_ITEMS" operation="GTEQ" value="5" />
            <denominator type="MOVE" operation="LTEQ" value="5" />
        </rule>
    </achievement>
    <achievement name="Itemizer" level="GOLD" difficulty="NONE">
